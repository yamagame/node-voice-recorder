{
  "name": "js-voice-recorder",
  "version": "1.0.0",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc --project tsconfig.build.json && tsc-alias --verbose -p tsconfig.build.json",
    "clean": "rm -rf ./build",
    "ts-node": "ts-node -r tsconfig-paths/register $1",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^~/(.+)": "<rootDir>/$1"
    },
    "preset": "ts-jest"
  }
}
